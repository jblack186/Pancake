<link rel="stylesheet" href="{{ 'collection.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'collection.css' | asset_url | stylesheet_tag }}</noscript>

<section class="collection">
  <div class="collection__item">
    <div class="collection__item__img">
    <p class="collection__item__img__special" >
      In stock</p>

    <img src={Lotion} alt="item" />
    </div>
    <div class="collection__item__desc">
      <h2>Moon Charm Bracelet</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>
    <div class="collection__item__cart">
      <p>$30</p>
      <a href="">Add to cart</a>
    </div>
  </div>

</section>

{% schema %}
{
  "name": "Pancake Collection Group",
  "tag": "section",
  "class": "section",
  "settings": [

        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"

        },
        {
          "type": "select",
          "id": "align__text",
          "label": "Text align",
          "default": "flex-start",
          "options": [
            {
              "value": "flex-start",
              "label": "left"
            },
            {
              "value": "center",
              "label": "middle"
            },
            {
              "value": "flex-end",
              "label": "right"
            }


          ]
  
        },
        {
          "type": "select",
          "id": "it-width",
          "label": "Container width",
          "default": "100%",
          "options": [
            {
              "value": "90",
              "label": "Contain"
            },
            {
              "value": "100%",
              "label": "Full"
            }


          ]
  
        },

        {
          "type": "checkbox",
          "id": "line",
          "label": "Disable accent line",
          "default": false
  
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Banner heading",
          "default": "OUR PHILOSOPHY"
  
        },
        {
          "type": "text",
          "id": "body",
          "label": "Banner body",
          "default": "We're a wellness and beauty brand empowering eople to live a happy and healthy life."

        },
        {
          "type": "text",
          "id": "left_heading",
          "label": "Left heading",
          "default": "the beauty trend"
        },
        {
          "type": "text",
          "id": "left_body",
          "label": "Left body",
          "default": "Treat your skin with a little love, care and makeup."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "SHOP COLLECTION"
        },

        {
          "type": "checkbox",
          "id": "banner",
          "label": "Include banner",
          "default": true
    
        },

        {
          "id": "banner_position",
          "label": "Banner position",
          "type": "select",
          "options": [
            {
              "value": "top",
              "label": "top"
            },
            {
              "value": "bottom",
              "label": "bottom"
            }
           
          ],
          "default": "bottom"
        }
        
        
      ],
      "presets": [
        {
          "name": "Pancake Collection Group",
          "category": "Image"
        }
      ]
    
    
  

}
{% endschema %}
