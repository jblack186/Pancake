<link rel="stylesheet" href="{{ 'collection.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'collection.css' | asset_url | stylesheet_tag }}</noscript>

<section class="collection">
  {%- for product in section.settings.collection.products limit: section.settings.total_products -%}
  <div class="collection__item">
    <div class="collection__item__img">
    <p class="collection__item__img__special" >
      In stock</p>
      {%- if product.images[0] != blank -%}
      <a href="{{product.url}}" class="img-link">
        <img srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0]  | img_url: '165x' }} 165w,{%- endif -%}
          {%- if product.images[0].width >= 360 -%}{{ product.images[0] | img_url: '360x' }} 360w,{%- endif -%}
          {%- if product.images[0].width >= 535 -%}{{ product.images[0] | img_url: '535x' }} 535w,{%- endif -%}
          {%- if product.images[0].width >= 720 -%}{{ product.images[0] | img_url: '720x' }} 720w,{%- endif -%}
          {%- if product.images[0].width >= 940 -%}{{ product.images[0] | img_url: '940x' }} 940w,{%- endif -%}
          {%- if product.images[0].width >= 1070 -%}{{ product.images[0] | img_url: '2000x' }} 2000w{%- endif -%}"
          src="{{ product.images[0] | img_url: '533x' }}"
          sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
          alt="{{ product.images[0].alt | escape }}"
          loading="lazy"
          width="{{ product.images[0].width }}"
          height="{{ product.images[0].height }}"
         
        >
      </a>
      {%- else -%}
							{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
						{%- endif -%}

    </div>
    <div class="collection__item__desc">
      <h2>{{ product.title }}</h2>
      {% comment %} <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p> {% endcomment %}
    </div>
    <div class="collection__item__cart" {%if {{section.settings.price-cart__background}} %} style="display: flex" {%else%} style="display: none" {%endif%} > 
      <p>${{ product.price }}</p>
      <a href="{{product.url}}">Add to cart</a>
    </div>
  </div>
{%-endfor-%}
</section>

{% schema %}
{
  "name": "Pancake Collection Group",
  "tag": "section",
  "class": "section",
  "settings": [
    {
			"type": "collection",
			"id": "collection",
			"label": "Featured collection"
		},
		{
			"type": "range",
			"id": "total_products",
			"min": 1,
			"max": 16,
			"step": 1,
			"label": "Total Products",
			"default": 16
    },
    {
			"type": "checkbox",
			"id": "price-cart__background",
      "label": "Price-Cart background",
      "default": true
		}

        
        
      ],
      "presets": [
        {
          "name": "Pancake Collection Group",
          "category": "Image"
        }
      ]
    
    
  

}
{% endschema %}
