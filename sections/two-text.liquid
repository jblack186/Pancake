<link rel="stylesheet" href="{{ 'featured-boxes.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'featured-boxes.css' | asset_url | stylesheet_tag }}</noscript>


<section class="two-text">
  <div class="two-text__text" style="background-color: {{section.settings.two-box_color}}">
    <div class="two-text__text__content">
  <h3 style="color: {{section.settings.two-box-text_color}}">{{section.settings.two-left_heading}}</h3>
    <p style="color: {{section.settings.two-box-text_color}}">{{section.settings.two-left_body}}</p>
    </div>
  </div>
  <div class="two-text__img overlay">
    {%- for product in section.settings.featured_collection.products limit:1 -%}
      <h3 class="two-text__img__heading overlay" >{{product.title}}</h3>
    <img src="{{product.featured_image.src | img_url: '240x'}}" alt="item" />
    {%else%}
    <p>No collection</p>
  {% endfor %}

    </div>
    <div class="two-text__text"  style="background-color: {{section.settings.two-box_color}}">
      <div class="two-text__text__content">
        <h3 style="color: {{section.settings.two-box-text_color}}">{{section.settings.right_heading}}</h3>
        <p style="color: {{section.settings.two-box-text_color}}">{{section.settings.right_body}}</p>
        </div>
    </div>
</section>

{% schema %}



{
  "name": "Two Text / One Image",
  "tag": "section",
  "class": "section",
  "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"

        },
        
        {
          "type": "text",
          "id": "two-left_heading",
          "label": "Left heading",
          "default": "Increase Your Beauty"
  
        },
        {
          "type": "text",
          "id": "two-left_body",
          "label": "Left body",
          "default": "Capture your ture self. Our products are of the utmost quality. Shop here."

        },
        {
          "type": "text",
          "id": "right_heading",
          "label": "Right heading",
          "default": "Increase Your Beauty"
  
        },
        {
          "type": "text",
          "id": "right_body",
          "label": "Right body",
          "default": "Capture your ture self. Our products are of the utmost quality. Shop here."

        },

        {
          "type": "collection",
          "id": "featured_collection",
          "label": "Featured Collection"
        },
        
        
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "SHOP COLLECTION"
        },
        {
          "type": "color",
          "id": "two-box_color",
          "label": "Background color",
          "default": "#966060"
 
        },
        {
          "type": "color",
          "id": "two-box-text_color",
          "label": "Color",
          "default": "#ffffff"
 
        }
        
        
      ],
      "presets": [
        {
          "name": "Two Text / One Image",
          "category": "Image"
        }
      ]
    
  

}
{% endschema %}
